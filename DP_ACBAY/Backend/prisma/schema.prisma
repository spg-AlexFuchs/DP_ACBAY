datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model SurveyResponse {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  // ─────────────────────────
  // Arbeit & Mobilität
  // ─────────────────────────

  officeDaysPerWeek Int        // 0–5 (quantitativ)
  transportMain     String     // Auto, Öffis, Fahrrad, ...
  transportReason  String     // Kosten, Zeit, Umwelt, ...

  alternativeUsageFactor Float // 0.0 / 0.03 / 0.10 / 0.33 (quantitativ)
  alternativeTransport  String?

  distanceKm     Int           // z. B. 5, 15, 25, 45, 55, 80 (quantitativ)
  commuteDuration String       // Unter 15 min, 15–30, ... (qualitativ)

  carEngineType  String        // Benzin, Diesel, Elektro, ...

  // ─────────────────────────
  // Einstellung & Motivation
  // ─────────────────────────

  co2Importance      Int       // 1–6
  willingnessToChange String
  incentives          String?
  supportNeeded       String

  // ─────────────────────────
  // Haushalt & Energie
  // ─────────────────────────

  fireworksPerYear   Int       // 0, 1, 3 (quantitativ)

  heatingSavingFactor Float    // 0.7 / 0.9 / 1.0 (quantitativ)
  heatingType         String   // Gas, Wärmepumpe, ...

  hotWaterType        String   // Strom, Gas, Solar, ...
  greenElectricityFactor Float // 0.0 / 0.5 / 0.8 / 1.0 (quantitativ)
  greenElectricityProvider String?

  renewableTimingFactor Float  // Nutzung erneuerbarer Zeiten (quantitativ)

  // ─────────────────────────
  // Reisen
  // ─────────────────────────

  flightAvoidanceFactor Float  // 0.0–1.0 (quantitativ)
  flightsPerYear        Int    // 0–10 (quantitativ)
  averageFlightDistanceKm Int  // 750 / 2500 / 5000 (quantitativ)

  trainInsteadFlight    String // Ja / Manchmal / Nein
}
